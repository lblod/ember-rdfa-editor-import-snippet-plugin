<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
      <p>
        <strong>U kan hier informatie uit een externe bron invoegen</strong>
      </p>
    </div>
    <div class="col--2-12 u-align-right">
      <a class="link--icon--close" href="#" {{action this.args.closeHints}}>
        <span class="u-visually-hidden">Venster sluiten</span>
      </a>
    </div>
  </div>
</div>
<div class="modal-dialog__content modal-dialog__content--sectioned">
  <ul class="link-list link-list--bordered">
    {{#each this.info.snippets as |snippet|}}
      <li class="link-list__item">
        <button {{on "click" (fn this.insert snippet)}} class='say-button'>document invoegen</button>
      </li>
    {{/each}}
  </ul>
</div>
